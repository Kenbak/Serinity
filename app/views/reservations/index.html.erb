
<% @reservations.select { |reservation| reservation.date >= Date.today }.each do |reservation| %>

  <% if reservation.date < Date.today %>

    <%= reservation.patient.last_name %>
    <%= reservation.date %>

  <% end %>

  <% if  reservation.date > Date.today %>

    <%= reservation.patient.last_name %>
    <%= reservation.date %>

  <% end %>


<% end %>
