<body class="no-navbare">
<%= render "shared/menu-burger" %>
  <div class="container-login-login">
    <div class="image-connexion"><%= image_tag("connexion.png") %></div>


    <div class="form-section">


      <h2 class="h2-login">Se connecter</h2>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="input-login">
          <%= f.input :email, label: false,
                        required: false,
                        placeholder: "Email",
                        autofocus: true,
                        input_html: { autocomplete: "email" } %>
          <%= f.input :password, label: false,
                            required: false,
                            placeholder: "Mot de passe",
                            input_html: { autocomplete: "current-password" } %>
          <% if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
            <div class="button-forgot">
              <%= link_to "Mot de passe oubliÃ© ?", new_password_path(resource_name), class: "button-forgot" %><br />
            </div>
          <% end %>

          <%= f.submit "Se connecter", class: "button-login" %>
      <% end %>

      <%= render "devise/shared/links" %>
        </div>


    </div>
  </div>
</body>
