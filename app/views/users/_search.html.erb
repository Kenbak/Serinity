<div class="search-bar">

  <%= form_with url: users_path, method: :get, html: { class: "d-flex derriere", data: { search_users_target: 'form' } } do |f| %>
    <%= f.text_field :query,

                      placeholder: "Recherchez",
                      value: params[:query],
                      id: "search-input",
                      class: "search-input",
                      data: { action: 'keyup->search-users#update', search_users_target: 'searchInput' } %>

  <% end %>

</div>
