<body class="no-navbar">
  <div class="container2">


      <div class="index-card-show">
          <%= image_tag("pp_default.png") %>
          <div class="position-info-card">
            <div class="primary-info-card">
              <%= @user.last_name %>
              <%= @user.first_name %>
              <%= @user.age %>
            </div>
            <div class="secondary-info-card">
              <%= @user.adress %>
              <%= @user.number %>
            </div>
          </div>
      </div>


      <div class="container-bot-show">

        <div class="description-profil">
          <textarea id="description" name="description" rows="11" style="width: 100%; height: 100%; border-radius: 10px; background-color: rgba(231, 186, 201, 0.3);" placeholder="InsÃ©rez votre description ici"></textarea>
        </div>



        <div class="reservation">

          <div class="calender">
            <%= simple_form_for [@user, @reservation] do |f|%>

            <%= f.input :date,
                        as: :string,
                        input_html: { data: { controller: "datepicker" }, hidden: true },
                        label: false %>
          </div>
          <div class="input-right">
            <div class="input-price">
              <%= f.input :price,
                          as: :string,
                          input_html: { class: 'form-control', placeholder: 'Saisissez le prix' },
                          label: false %>
            </div>
            <div class="boutton-valider">
              <%= f.submit "Valider le rendez-vous", class: "boutton-valider" %>
            </div>
          </div>
          <% end %>
        </div>
      </div>
    </div>
</body>
