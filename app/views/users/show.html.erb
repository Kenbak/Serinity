<div class="container2">
  <div class="description-profil">
    <p>description du profil</p>
    <input type="textarea">
  </div>

  <div class="reservation">



  <div>
    <%= simple_form_for [@user, @reservation] do |f|%>

    <%= f.input :date,
                as: :string,
                input_html: { data: { controller: "datepicker" }, hidden: true },
                label: "Choisir le rendez-vous" %>
    <%= f.input :price,
                as: :string,
                input_html: { class: 'form-control', placeholder: 'Saisissez le prix' },
                label: "Choisir un prix" %>
    <%= f.submit "Valider le rendez-vous", class:"button-valider" %>

    <% end %>
  </div>
